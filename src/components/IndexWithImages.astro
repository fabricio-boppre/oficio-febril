---
import { css } from "@styled-system/css"
import { flex } from "@styled-system/patterns"
import { Image } from "astro:assets"
const { content, route } = Astro.props
---

<div
  class={flex({
    gap: ["30px", undefined, "53px"],
    flexWrap: "wrap",
  })}
>
  {
    content.map((item) => {
      return (
        <a
          class={css({
            display: "block",
            w: "200px",
          })}
          href={"/" + route + "/" + item.id}
        >
          <Image src={item.data.imagem_para_indice} alt={item.data.titulo} />
          <span class={css({ textStyle: "spanText" })}>{item.data.titulo}</span>
        </a>
      )
    })
  }
</div>

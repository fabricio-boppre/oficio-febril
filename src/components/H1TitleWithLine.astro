---
import { css } from "@styled-system/css"
const { title } = Astro.props
---

<header>
  <h1
    class={css({
      zIndex: "-1",
      position: "relative",
    })}
  >
    {title}
  </h1>
  <div
    class={css({
      w: "100%",
      mt: ["-32px", undefined, "-37px"],
      borderTop: "1px solid black",
      bgColor: "white",
      h: "30px",
    })}
  >
  </div>
</header>

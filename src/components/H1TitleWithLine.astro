---
import { css } from "@styled-system/css"
const { preTitle, title } = Astro.props
---

<header>
  <h1
    class={css({
      textStyle: "basicHeading1",
      layerStyle: "basicText",
      zIndex: "-1",
      position: "relative",
    })}
  >
    {
      preTitle ? (
        <>
          <span class={css({ color: "grayFont" })}>{preTitle}</span> /
        </>
      ) : (
        ""
      )
    }
    <span>{title}</span>
  </h1>
  <div
    class={css({
      w: "100%",
      mt: ["-32px", undefined, "-37px"],
      borderTop: "1px solid black",
      bgColor: "white",
      h: "30px",
    })}
  >
  </div>
</header>

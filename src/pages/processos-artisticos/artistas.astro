---
import InsideLayout from "@layouts/InsideLayout.astro"
import ProcessosArtisticosNavLinks from "@components/ProcessosArtisticosNavLinks.astro"
import H1TitleWithLine from "@components/H1TitleWithLine.astro"
import { getCollection } from "astro:content"

const artistas = (await getCollection("artistas")).sort((a, b) =>
  a.data.nome.localeCompare(b.data.nome),
)
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const preTitle = "Processos artísticos"
const title = "Artistas"
---

<InsideLayout
  title={preTitle + " / " + title}
  description="Produção artística envolvendo processos gráficos, tipos móveis e clichês desenvolvida por artistas, professores, estudantes, escritores, designers e pesquisadores no contexto do projeto desde 2023."
  canonicalURL={canonicalURL}
>
  <H1TitleWithLine preTitle={preTitle} title={title} />
  <ProcessosArtisticosNavLinks />
  <article>
    <ul>
      {
        artistas.map((artista) => (
          <li>
            <a href={"/processos-artisticos/artista/" + artista.id}>
              {artista.data.nome}
            </a>
          </li>
        ))
      }
    </ul>
  </article>
</InsideLayout>

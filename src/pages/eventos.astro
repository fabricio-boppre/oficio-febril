---
import BasicLayout from "../layouts/BasicLayout.astro"
import { getCollection } from "astro:content"

const allEvents = await getCollection("eventos")
---

<BasicLayout title="eventos">
  <h1>eventos</h1>
  <div class="indexListImages">
    {
      allEvents.map((event) => (
        <div class="indexListItem">
          <a href={`/eventos/${event.id}`}>
            <img
              src={event.data.imagem_ilustrativa.src}
              alt={event.data.nome}
            />
            <div class="indexListItemName">{event.data.nome}</div>
          </a>
        </div>
      ))
    }
  </div>
</BasicLayout>

<style lang="scss">
  .indexListImages {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    .indexListItem {
      width: 200px;
      a {
        text-decoration: none;
        color: black !important;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
</style>

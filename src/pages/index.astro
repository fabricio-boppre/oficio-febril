---
import { css } from "@styled-system/css"
import { flex } from "@styled-system/patterns"
import BasicLayout from "@layouts/BasicLayout.astro"
import HeaderTitle from "@components/HeaderTitle.astro"
import NavMenu from "@components/NavMenu.astro"
import H1TitleWithLine from "@components/H1TitleWithLine.astro"
import { Image } from "astro:assets"
import { getCollection } from "astro:content"

// Getting the cliches:
const allCliches = await getCollection("cliches")
const allClichesSimplified = allCliches.flatMap((cliche) => ({
  titulo: cliche.data.titulo,
  descricao: cliche.data.descricao,
  imagemSrc: cliche.data.imagem.src,
}))

// Creating the array for all the destaques:
var destaques = new Array()

// Getting processos_artisticos that are destaque and pushing them inside destaques array:
const processosArtisticosDestaques = await getCollection(
  "processosArtisticos",
  ({ data }) => {
    return data.rascunho !== true && data.destaque_na_capa === true
  },
)
processosArtisticosDestaques.map((processo) => {
  destaques.push({
    id: processo.id,
    titulo: processo.data.titulo,
    imagem_para_indice: processo.data.imagem_para_indice,
    data_da_publicacao: processo.data.data_da_publicacao,
    route: "processos-artisticos/processo",
  })
})

// Getting quando_os_tipos_se_movem that are destaque and pushing them inside destaques array:
const quandoOsTiposDestaques = await getCollection(
  "quandoOsTipos",
  ({ data }) => {
    return data.rascunho !== true && data.destaque_na_capa === true
  },
)
quandoOsTiposDestaques.map((quando) => {
  destaques.push({
    id: quando.id,
    titulo: quando.data.titulo,
    imagem_para_indice: quando.data.imagem_para_indice,
    data_da_publicacao: quando.data.data_da_publicacao,
    route: "quando-os-tipos-se-movem",
  })
})

// Getting a_oficina_e_o_oficio that are destaque and pushing them inside destaques array:
const aOficinaDestaques = await getCollection("aOficina", ({ data }) => {
  return data.rascunho !== true && data.destaque_na_capa === true
})
aOficinaDestaques.map((oficina) => {
  destaques.push({
    id: oficina.id,
    titulo: oficina.data.titulo,
    imagem_para_indice: oficina.data.imagem_para_indice,
    data_da_publicacao: oficina.data.data_da_publicacao,
    route: "a-oficina-e-o-oficio",
  })
})

// Sorting destaques:
destaques.sort(
  (a, b) => b.data_da_publicacao.valueOf() - a.data_da_publicacao.valueOf(),
)

// Getting the artists list:
const artistas = (await getCollection("artistas")).sort((a, b) =>
  a.data.nome.localeCompare(b.data.nome),
)

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const title = "Página inicial"
---

<BasicLayout
  title={title}
  description="Ofício febril é um projeto de pesquisa em artes dedicado à produção e investigação de processos artísticos vinculados à composição e impressão tipográfica."
  canonicalURL={canonicalURL}
>
  <header
    class={flex({
      minH: "calc(100vh - var(--spacing-header-and-footer-y-margin))",
      layerStyle: "headerLayout",
    })}
  >
    <HeaderTitle />
    <NavMenu />
    <div
      id="cliche"
      class={flex({
        maxW: "maxWidth",
        alignItems: "center",
        justifyContent: "center",
        m: "0 auto",
        p: "20px",
        flex: "1 0 auto",
      })}
    >
    </div>
  </header>
  <main
    class={css({
      layerStyle: "mainLayout",
      "& section": {
        mb: "40px",
      },
    })}
  >
    <section>
      <H1TitleWithLine title="Febres" />
      <div
        class={flex({
          gap: ["30px", undefined, "53px"],
          flexWrap: "wrap",
        })}
      >
        {
          destaques.map((item) => {
            return (
              <a
                class={css({
                  display: "block",
                  w: "200px",
                })}
                href={"/" + item.route + "/" + item.id}
              >
                <Image src={item.imagem_para_indice} alt={item.titulo} />
                <span class={css({ textStyle: "spanText" })}>
                  {item.titulo}
                </span>
              </a>
            )
          })
        }
      </div>
    </section>
    <section>
      <H1TitleWithLine title="Artistas e pesquisadores" />
      <ul class={css({ textStyle: "basicText" })}>
        {
          artistas.map((artista) => (
            <li>
              <a href={"/processos-artisticos/artista/" + artista.id}>
                {artista.data.nome}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</BasicLayout>

<script define:vars={{ allClichesSimplified }}>
  var randomCliche =
    allClichesSimplified[
      Math.floor(Math.random() * allClichesSimplified.length)
    ]
  const clicheImgDiv = document.getElementById("cliche")
  var img = document.createElement("img")
  img.src = randomCliche.imagemSrc
  img.alt = randomCliche.titulo + ", " + randomCliche.descricao
  clicheImgDiv.appendChild(img)
</script>
